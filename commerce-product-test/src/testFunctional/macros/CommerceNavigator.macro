definition {

	macro gotoCommercePortletNavItem {
		AssertClick(
			key_navItem = "${navItem}",
			locator1 = "NavBar#NAV_ITEM_LINK",
			value1 = "${navItem}");
	}

	macro gotoEntry {
		AssertClick(
			key_entryName = "${entryName}",
			locator1 = "CommerceNavigation#ENTRY_NAME",
			value1 = "${entryName}");
	}

	macro gotoFrontStoreProductPage {
		var productNameURL = StringUtil.replace("${productName}", " ", "-");
		var productNameURL = StringUtil.lowerCase("${productNameURL}");

		WaitForSPARefresh();

		var baseURL = "${baseURL}";

		if (contains("${baseURL}", "{baseURL}")) {
			var baseURL = PropsUtil.get("portal.url");
		}

		Open(locator1 = "${baseURL}/web/guest/p/${productNameURL}");


		Pause(locator1 = "30000");

	}

	macro gotoOptionValues {
		Click(
			key_optionEntryName = "${optionEntryName}",
			locator1 = "CommerceNavigation#OPTION_VALUES_LINK",
			value1 = "${optionEntryName}");

		WaitForSPARefresh();

		AssertElementPresent(locator1 = "CommerceEntry#NAME_FIELD");
	}

	macro searchEntry {
		Type(
			entryName = "${entryName}",
			locator1 = "TextInput#SEARCH",
			value1 = "${entryName}");

		Click(locator1 = "CommerceNavigation#SEARCH");
	}

}