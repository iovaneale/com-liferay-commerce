definition {

	macro checkout {
		ProductMenu.gotoSite(site = "${site}");
		
		Navigator.openSpecificURL(url = "http://localhost:8080/group/Minium");

		Click(locator1 = "CommerceMinium#MINI_CART_BUTTON");

		Click(locator1 = "CommerceMinium#CHECKOUT_BUTTON");

		Pause(locator1 = "3000");

		Select(
			locator1 = "CommerceMinium#CHECKOUT_SHIPPING_ADDRESS_SELECT",
			value1 = "${addressName}");

		Click(locator1 = "Button#CONTINUE");

		Click(
			key_fieldName = "ShippingOptionKey",
			key_radioOption = "${deliveryType}",
			locator1 = "CommerceMinium#CHECKOUT_DELIVERY_RADIO");

		Click(locator1 = "Button#CONTINUE");

		Click(locator1 = "Button#CONTINUE");
	}

}