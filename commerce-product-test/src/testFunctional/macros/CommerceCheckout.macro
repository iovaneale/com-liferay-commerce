definition {

	macro checkout {
		ProductMenu.gotoSite(site = "${site}");

		Click(locator1 = "CommerceMinium#MINI_CART_BUTTON");

		Click(locator1 = "CommerceMinium#CHECKOUT_BUTTON");

		Pause(locator1 = "3000");

		Select(
			key_fieldLabel = "Choose Shipping Address",
			locator1 = "Select#GENERIC_SELECT_FIELD",
			value1 = "${addressName}");

		Click(locator1 = "Button#CONTINUE");

		Click(
			key_radioOption = "${deliveryType} Delivery",
			locator1 = "CommerceMinium#CHECKOUT_SHIPPING_OPTION_RADIO");

		Click(locator1 = "Button#CONTINUE");

		Click(locator1 = "Button#CONTINUE");
	}

}